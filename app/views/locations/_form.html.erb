
<%= simple_form_for(@location) do |f| %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :name %>
    <%= f.input :chi_name %>
    <%= f.input :status %>
    <%= f.input :parent_id, collection: Location.order(:name) %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
 
 