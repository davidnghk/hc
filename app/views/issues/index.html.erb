<div class="row">
  <div class="col-sm-6">
    <h1><%= t("#{@type}") %></h1>  
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to sti_issue_path(@type, nil, :new), class: 'btn btn-primary' do %>
    <%= t("new") %>
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>    
        <% if @type == "Issue" %>
            <th>Type</th>
        <% end %>
            <th>Code</th>
            <th>Name</th>
            <th>Chi name</th>
            <th>Is active?</th>
            <th>Ancestry</th>
      </tr>
    </thead>

    <tbody>
      <% @issues.each do |issue| %>
        <tr class="info" data-link="<%= issue_path(issue) %>">
            <% if @type == "Issue" %>
                <td><%= issue.type %></td>
            <% end %>
            <td><%= link_to issue.code, issue %></td>
            <td><%= issue.name %></td>
            <td><%= issue.chi_name %></td>
            <td><%= issue.is_active? %></td>
            <td><%= issue.ancestry %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

  <div >
  <%= link_to sti_issue_path, class: 'btn btn-warning' do %>
    <%= t("sell all issues ") %>
  <% end %>
  </div>

