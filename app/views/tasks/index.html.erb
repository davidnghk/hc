<div class="row">
  <div class="col-sm-6">
        <h1><%= t("#{@type}") %></h1> 
  </div>


  <div class="col-sm-6 text-right">
  <%= link_to sti_task_path(@type, nil, :new), class: 'btn btn-primary' do %>
    <%= t("new") %>
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>    
        <% if @type == "Task" %>
            <th>Type</th>
        <% end %>
            <th>Code</th>
            <th>Name</th>
            <th>Chi name</th>

      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr class="info" data-link="<%= task_path(task) %>">
        <% if @type == "Task" %>
            <td><%= task.type %></td>
        <% end %>
            <td><%= link_to task.code, task %></td>
            <td><%= task.name %></td>
            <td><%= task.chi_name %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>

  <div >
  <%= link_to sti_task_path, class: 'btn btn-warning' do %>
    <%= t("sell all tasks ") %>
  <% end %>
  </div>