<div class="row">
  <div class="col-sm-6">
    <h1><%= t(@type) %></h1>
  </div>

  <div class="col-sm-6 text-right">
    <%= link_to sti_incident_path(@type, nil, :new), class: 'btn btn-primary' do %>
      <%= t("new") %>
    <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>

            <th><%= t("task") %></th>
            <th><%= t("incident_date") %></th>
            <th><%= t("location") %></th>
            <th><%= t("user") %></th>

            <th><%= t("status") %></th>
            <th><%= t("source") %></th>
            <th><%= t("responsible_user") %></th>
            <th><%= t("worker") %></th>

      </tr>
    </thead>

    <tbody>
      <% @incidents.each do |incident| %>
        <tr class="info" data-link="<%= incident_path(incident) %>">          

                      <td><%= incident.task.display_name %></td>
                      <td><%= incident.incident_datetime.strftime("%Y-%m-%d %I:%M %p") if incident.incident_datetime? %></td>

                      <td><%= incident.location.display_name if incident.location_id? %></td>
                      <td><%= incident.user.display_name %></td>

                      <td><%= t(incident.status) %></td>
                      <td><%= t(incident.source) %></td>
                      <td><%= incident.responsible_user.name if incident.responsible_user_id? %></td>
                      <td><%= incident.worker_user.name if incident.worker_user_id? %></td>
        
          
        </tr>  
      <% end %>
    </tbody>
  </table>
</div>
